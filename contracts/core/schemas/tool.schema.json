{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://nucleus.local/contracts/core/schemas/tool.schema.json",
  "title": "Nucleus Core Tool Definition",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "tool_id": { "type": "string", "minLength": 1 },
    "version": { "type": "string", "minLength": 1 },
    "title": { "type": "string", "minLength": 1 },
    "description": { "type": "string", "default": "" },
    "side_effects": {
      "type": "string",
      "enum": ["none", "filesystem", "notification", "app", "network", "unknown"]
    },
    "destructive": { "type": "boolean", "default": false },
    "requires_explicit_allow": {
      "type": "boolean",
      "default": false,
      "description": "If true, policy must require explicit allow/confirmation before execution."
    },
    "supports_dry_run": { "type": "boolean", "default": false },
    "args_schema": {
      "type": "object",
      "description": "JSON Schema for tool args. Validated at runtime."
    }
  },
  "required": ["tool_id", "version", "title", "side_effects", "destructive", "supports_dry_run", "args_schema"]
}


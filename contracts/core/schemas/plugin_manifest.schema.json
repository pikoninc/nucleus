{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://nucleus.local/contracts/core/schemas/plugin_manifest.schema.json",
  "title": "Nucleus Core Plugin Manifest",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "plugin_id": { "type": "string", "minLength": 1 },
    "version": { "type": "string", "minLength": 1 },
    "contracts_core_version": { "type": "string", "minLength": 1 },
    "intents": {
      "type": "array",
      "default": [],
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "intent_id": { "type": "string", "minLength": 1 },
          "description": { "type": "string", "default": "" },
          "params_schema_ref": {
            "type": "string",
            "description": "Optional reference to plugin-owned params schema (plugin contracts are out of framework scope)."
          }
        },
        "required": ["intent_id"]
      }
    },
    "tools_allowlist": {
      "type": "array",
      "default": [],
      "items": { "type": "string", "minLength": 1 }
    },
    "ui_adapters": {
      "type": "array",
      "default": [],
      "items": { "type": "string", "minLength": 1 }
    }
  },
  "required": ["plugin_id", "version", "contracts_core_version", "intents", "tools_allowlist"]
}

